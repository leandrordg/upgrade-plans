generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Plan {
  FREE
  PREMIUM
}

model User {
  id         String   @id @default(cuid())
  firstName  String
  lastName   String?
  username   String   @unique
  email      String   @unique
  phone      String?
  image      String?
  activePlan Plan     @default(FREE)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
